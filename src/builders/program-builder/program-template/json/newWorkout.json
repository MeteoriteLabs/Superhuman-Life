                 "minimum": 1
             },
             "equipment": {
                "type": "string",
                "description": "Add all equipments required to perform the exercises in the workout"
            },
            "muscleGroup": {
                "type": "string",
                "description": "Search for muscles target by this workout"
            }
          },
          "definitions": {
             "addWorkout": {
                 "title": "Add Workout",
                 "type": "object",
                 "properties": {
                     "AddWorkout": {
                         "type": "string",
