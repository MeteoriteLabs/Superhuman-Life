                 },
                 "required": [
                     "AddWorkout"
                 ],
                 "dependencies": {
                     "AddWorkout": {
                         "oneOf": [
                             {
                                 "properties": {
                                     "AddWorkout": {
                                         "enum": [
                                             "Add URL"
                                         ]
                                     },
                                     "AddURL": {
                                         "type": "string",
