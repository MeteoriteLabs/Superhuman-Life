{
    "1": {
        "title": "",
        "type": "object",
        "required": [
            "name",
            "typo",
            "mode",
            "level",
            "status"
        ],
        "properties": {
            "name": {
                "type": "string",
                "title": "Event Name"
            },
            "typo": {
                "type": "string",
                "title": "Type",
                "enum": [
                    "Retreat",
                    "Workshop",
                    "Marathon",
                    "Mini Marathon",
                    "Walkathon",
                    "Bootcamp",
                    "Meetup",
                    "Activity",
                    "Cooking",
                    "Podcast",
                    "Discussion",
                    "Others"
                ]
            },
            "tags": {
                "type": "string",
                "title": "Tags"
            },
            "mode": {
                "type": "string",
                "title": "Mode",
                "enum": [
                    "Online",
                    "Offline"
                ]
            },
            "level": {
                "type": "string",
                "title": "Level",
                "enum": [
                    "Beginner",
                    "Intermediate",
                    "Advance"
                ]
            },
            "status": {
                "type": "string",
                "title": "Status",
                "enum": [
                    "Active",
                    "Inactive",
                    "Pending"
                ]
            }
        }
    },
    "2": {
        "title": "",
        "type": "object",
        "required": [
            "summary",
            "location",
            "size",
            "start",
            "days"
        ],
        "properties": {
            "summary": {
                "type": "string",
                "title": "Mini Description"
            },
            "description": {
                "type": "string",
                "title": "Full Description"
            },
            "location": {
                "type": "string",
                "title": "Location"
            },
            "size": {
                "type": "number",
                "title": "No. of Participants"
            },
            "days": {
                "type": "number",
                "title": "No. of Days"
            },
            "start": {
                "type": "string",
                "format": "date",
                "title": "Start Date"
            },
            "video": {
                "type": "string",
                "format": "uri",
                "title": "Event Video Link"
            },
            "thumbnail": {
                "type": "string",
                "format": "data-url",
                "title": "Intro Picture",
                "accept": ".jpg"
            }
        }
    },
    "3": {
        "title": "Session",
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "start": {
                    "type": "string",
                    "format": "time",
                    "title": "Start Time"
                },
                "end": {
                    "type": "string",
                    "format": "time",
                    "title": "End Time"
                },
                "title": {
                    "type": "string",
                    "title": "Title"
                },
                "about": {
                    "type": "string",
                    "title": "About Session"
                }
            }
        }
    },
    "4": {
        "title": "",
        "type": "object",
        "properties": {
            "schedule": {
                "title": "Bookings for this event closes on",
                "description": "Customers won't be able to book this event after this time",
                "type": "string",
                "format": "date-time"
            }
        }
    },
    "5": {
        "title": "",
        "type": "object"
    }
}