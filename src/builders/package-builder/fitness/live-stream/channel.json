{
    "1": {
        "title": "",
        "type": "object",
        "required": [
            "channelName",
            "discpline",
            "equipment",
            "level",
            "intensity"
        ],
       "properties": {
            "channelName": {
                "type": "string",
                "title": "Channel Name"
            },
            "tag": {
                "type": "string",
                "title": "Tags",
                "description": "User hashtags to improve your listing"
            },
            "discpline": {
                "type": "string",
                "description": "it is a required field"
            },
            "equipment": {
                "type": "string",
                "description": "it is a required field"
            },
           "level": {
                "type": "number",
                "title": "Level",
                "enum": [0, 1, 2, 3],
                "enumNames": [
                    "Beginner",
                    "Intermediate",
                    "Advanced", 
                    "No level"
                ]
            },
            "intensity": {
                "type": "number",
                "title": "Intensity",
                "enum": [0, 1, 2],
                "enumNames": [
                    "Low",
                    "Moderate",
                    "High"
                ]
            }
        }   
    },
    "2": {
       "title": "",
       "type": "object",
       "required": [
            "About",
            "Benifits",
            "thumbnail",
            "Upload"
       ],
       "properties": {
            "About": {
                "type": "string",
                "title": "About"
            },
            "Benifits": {
                "type": "string",
                "title": "Benefits"
            },
            "thumbnail": {
                "type": "string",
                "description": "Accepts only Image and size cannot exceed 5mb"
            },
            "Upload": {
                "type": "object",
                "oneOf": [
                    {
                        "title": "Upload picture or video", 
                        "properties": {
                            "upload": {
                                "type": "string",
                                "description": "Accepts only Image and size cannot exceed 5mb"
                            }
                      },
                      "required": [
                        "upload"
                      ]
                    },
                    {
                    "title": "Video URL", 
                      "properties": {
                        "VideoUrl": {
                          "type": "string",
                          "format": "uri"
                        }
                      },
                      "required": [
                        "VideoUrl"
                      ]
                    }
                ]

            }
        }
    },
    "3": {
        "title": "",
        "type": "object",
        "required": [
            "channelinstantBooking"
        ],
        "properties": {
            "channelinstantBooking": {
                "type": "string",
                "title": "Allow instant Bookings"
              }
        }
    },
    "4": {
        "title": "",
       "type": "object",
       "required": [
            "pricing"
       ],
       "properties": {
            "pricing": {
                "type": "string"
            }
        }
    },
    "5": {
        "title": "Package Settings",
       "type": "object",
       "required": [
           "visibility",
           "datesConfig",
           "config"
       ],
       "properties": {
            "visibility": {
                "type": "number",
                "title": "Visibility",
                "enum": [0, 1],
                "enumNames": [
                    "Public",
                    "Private"
                ],
                "description": "The package will be save as draft and wait for you to publish it."
            },
            "datesConfig": {
                "type": "string"
            },
            "config": {
                "title": "Booking Config",
                "type": "object",
                "required": [
                    "acceptBooking",
                    "maxBookingMonth",
                    "maxBookingDay"
                ],
                "properties": {
                    "acceptBooking": {
                        "type": "number",
                        "title": "",
                        "enum": [0, 1],
                        "enumNames": [
                            "Manual",
                            "Auto"
                        ],
                        "description": "In auto it will automatically accept all bookings"
                    },
                    "maxBookingMonth": {
                        "type": "number",
                        "title": "Maximum booking/per month",
                        "minimum": 2,
                        "maximum": 50
                    },
                    "maxBookingDay": {
                        "type": "number",
                        "title": "Maximum booking/per day",
                        "minimum": 2,
                        "maximum": 10
                    }
                }
            }
        }
    },
    "6": {
        "title": "",
       "type": "object",
       "required": [
       ],
       "properties": {
            "preview": {
                "type": "string"
            }
        }
    }
}