{
    "1": {
        "title": "",
        "type": "object",
        "required": [
            "channelName",
            "discpline",
            "equipment"
        ],
       "properties": {
            "channelName": {
                "type": "string",
                "title": "Name of Offering",
                "description": "Enter the Title for Offering"
            },
            "discpline": {
                "type": "string",
                "description": "Choose the relevant discipline for the offering"
            },
            "equipment": {
                "type": "string",
                "description": "Add all tools required"
            },
            "tag": {
                "type": "string",
                "title": "Tags",
                "description": "Use hashtags to improve your listing"
            },
           "level": {
                "type": "number",
                "title": "Level",
                "enum": [0, 1, 2],
                "enumNames": [
                    "Beginner",
                    "Intermediate",
                    "Advanced"
                ],
                "description": "Select the appropriate difficulty"
            }
        }   
    },
    "2": {
       "title": "",
       "type": "object",
       "required": [
            "About",
            "Benifits",
            "thumbnail",
            "Upload",
            "languages"
       ],
       "properties": {
            "About": {
                "type": "string",
                "title": "About",
                "description": "Summarize the offering"
            },
            "Benifits": {
                "type": "string",
                "title": "Benefits",
                "description": "List the advantages"
            },
            "languages": {
                "type": "string"
            },
            "thumbnail": {
                "type": "string",
                "description": "This image will be seen in the listing screen"
            },
            "Upload": {
                "type": "object",
                "oneOf": [
                    {
                        "title": "Add Youtube URL", 
                          "properties": {
                            "VideoUrl": {
                              "type": "string",
                              "format": "uri",
                              "description": "Add Youtube URL"
                            }
                          },
                          "required": [
                            "VideoUrl"
                          ]
                        },
                    {
                        "title": "Upload picture or video", 
                        "properties": {
                            "upload": {
                                "type": "string",
                                "description": "This image will be seen in the details screen of the offering"
                            }
                      },
                      "required": [
                        "upload"
                      ]
                    }
                ]

            }
        }
    },
    "3": {
        "title": "",
        "type": "object",
        "required": [
            "channelinstantBooking"
        ],
        "properties": {
            "channelinstantBooking": {
                "type": "string",
                "title": "Allow instant Bookings"
              }
        }
    },
    "4": {
        "title": "",
       "type": "object",
       "required": [
            "pricing"
       ],
       "properties": {
            "pricing": {
                "type": "string"
            }
        }
    },
    "5": {
        "title": "Package Settings",
       "type": "object",
       "required": [
           "visibility",
           "datesConfig",
           "config"
       ],
       "properties": {
            "visibility": {
                "type": "number",
                "title": "Visibility",
                "enum": [0, 1],
                "enumNames": [
                    "Public",
                    "Private"
                ],
                "description": "Public: The Offering will be visible to the user as soon as it is created, Private: The offering will not ve seen by anyone until you share it with them"
            },
            "datesConfig": {
                "type": "string"
            },
            "config": {
                "title": "Booking Config",
                "type": "object",
                "required": [
                    "bookingConfig"
                ],
                "properties": {
                    "bookingConfig": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "6": {
        "title": "",
       "type": "object",
       "required": [
       ],
       "properties": {
            "preview": {
                "type": "string"
            }
        }
    }
}