{
    "1": {
        "title": "",
        "type": "object",
        "required": ["packagename", "equipmentList",  "dates"],
        "properties": {
            "packagename": {
                "type": "string",
                "title": "Name of Offering",
                "description": "Enter the title for Offering"
            },
            "equipmentList": {
                "type": "string",
                "description": "Add all tools required"
            },
            "tags": {
                "type": "string",
                "title": "Hash tags",
                "description": "Use hashtags to improve your listing"
            },
            "dates": {
                "type": "string"
            },
            "durationOfOffering": {
                "type": "array",
                "title": "Choose the relevant payment durations",
                "items": {
                    "type": "string",
                    "enum": ["1 day", "30 days", "90 days", "180 days", "360 days"]
                },
                "uniqueItems": true,
                "default": ["1 day", "30 days", "90 days", "180 days", "360 days"]
            }
        }
    },
    "2": {
        "title": "",
        "type": "object",
        "required": ["About", "Benifits", "classsize", "thumbnail", "VideoUrl", "languages"],
        "properties": {
            "About": {
                "type": "string",
                "title": "About",
                "description": "Summarize the offering"
            },
            "Benifits": {
                "type": "string",
                "title": "Benefits",
                "description": "List the advantages"
            },
            "classsize": {
                "type": "number",
                "title": "Class Size",
                "minimum": 1,
                "maximum": 100,
                "description": "Class size should be a minimum of 1"
            },
            "languages": {
                "type": "string",
                "title": "Languages"
            },
            "thumbnail": {
                "type": "string",
                "description": "This image will be seen in the listing screen"
            },
            "VideoUrl": {
                "type": "string",
                "format": "youtubeurl",
                "description": "Add Youtube URL"
            }
        }
    },
    "3": {
        "title": "Program Details",
        "type": "object",
        "required": ["programDetails"],
        "properties": {
            "programDetails": {
                "type": "string"
            }
        }
    },
    "4": {
        "title": "",
        "type": "object",
        "required": ["groupinstantbooking"],
        "properties": {
            "groupinstantbooking": {
                "type": "string",
                "title": "Allow Consumers to book instant Workouts"
            }
        }
    },
    "5": {
        "title": "Pricing Plan",
        "type": "object",
        "required": ["pricingDetail"],
        "properties": {
            "pricingDetail": {
                "type": "string"
            }
        }
    },
    "6": {
        "title": "Package Settings",
        "type": "object",
        "required": ["visibility", "datesConfig"],
        "properties": {
            "visibility": {
                "type": "number",
                "title": "Visibility",
                "enum": [0, 1],
                "enumNames": ["Public", "Private"],
                "default": 0,
                "description": "Public: The Offering will be visible to the user as soon as it is created, Private: The offering will not ve seen by anyone until you share it with them"
            },
            "datesConfig": {
                "type": "string"
            }
        }
    }
}
