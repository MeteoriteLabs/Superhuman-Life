{
    "1": {
        "title": "",
        "type": "object",
        "required": [
           "discipline"
        ],
        "properties": {
            "name": {
                "type": "string",
                "title": "Name of Package"
            },
            "discipline": {
                "type": "string",
                "title": "Discipline"
               
            },
            "tags": {
                "type": "string",
                "title": "Tags"
            },
            "level": {
                "type": "string",
                "title": "Level",
                "enum": [
                    "Beginner",
                    "Intermediate",
                    "Advance"
                ]
            },
            "visiblity": {
                "type": "string",
                "title": "Visiblity",
                "enum": [
                    "Public",
                    "Private"
                ]
            }
        }
    },
    "2": {
        "title": "",
        "type": "object",
        "required": [
            "about",
            "benefits",
            "size"
        ],
        "properties": {
            "about": {
                "type": "string",
                "title": "About"
            },
            "benefits": {
                "type": "string",
                "title": "Benefits"
            },
            "size": {
                "type": "number",
                "title": "Class Size"
            },
            "video": {
                "type": "string",
                "format": "uri",
                "title": "Exercise Video Link"
            },
            "thumbnail": {
                "type": "string",
                "format": "data-url",
                "title": "Exercise Picture",
                "accept": ".jpg"
            }
        }
    },
    "3": {
        "title": "",
        "description": "Program has to be assigned to Group package",
        "type": "object",
        "required": [
            "package"
        ],
        "properties": {
            "package": {
                "type": "string",
                "title": "Assign Package Now",
                "description": "Package won't be active till the program is assigned.",
                "enum": [
                    "Yes",
                    "Later"
                ]
            },
            "mode": {
                "type": "string",
                "title": "Mode",
                "enum": [
                    "Online",
                    "Offline",
                    "Hybrid"
                ]
            },
            "location": {
                "type": "string",
                "title": "Location",
                "enum": [
                    "Others",
                    "At My Address",
                    "At Client Address"
                ]
            },
            "pin": {
                "type": "string",
                "title": ""
            },
            "set": {
                "type": "number",
                "title": "Set for 1 month i.e. 30 days",
                "minimum": 30,
                "default": 0
            }
        },
        "dependencies": {
            "package": [
                "mode"
            ],
            "mode": {
                "oneOf": [
                    {
                        "properties": {
                            "mode": {
                                "enum": [
                                    "Online"
                                ]
                            },
                            "fitness": {
                                "type": "object",
                                "title": "",
                                "properties": {
                                    "group": {
                                        "type": "object",
                                        "title": "",
                                        "description": "Number of Group Classes",
                                        "properties": {
                                            "online": {
                                                "type": "number",
                                                "title": "Online"
                                            }
                                        }
                                    },
                                    "rest": {
                                        "type": "number",
                                        "title": "Number of Rest Classes"
                                    }
                                }
                            }
                        }
                    },
                    {
                        "properties": {
                            "mode": {
                                "enum": [
                                    "Offline"
                                ]
                            },
                            "fitness": {
                                "type": "object",
                                "title": "",
                                "properties": {
                                    "group": {
                                        "type": "object",
                                        "title": "",
                                        "description": "Number of Group Classes",
                                        "properties": {
                                            "offline": {
                                                "type": "number",
                                                "title": "Offline"
                                            }
                                        }
                                    },
                                    "rest": {
                                        "type": "number",
                                        "title": "Number of Rest Classes"
                                    }
                                }
                            }
                        }
                    },
                    {
                        "properties": {
                            "mode": {
                                "enum": [
                                    "Hybrid"
                                ]
                            },
                            "fitness": {
                                "type": "object",
                                "title": "",
                                "properties": {
                                    "group": {
                                        "type": "object",
                                        "title": "",
                                        "description": "Number of Group Classes",
                                        "properties": {
                                            "online": {
                                                "type": "number",
                                                "title": "Online"
                                            },
                                            "offline": {
                                                "type": "number",
                                                "title": "Offline"
                                            }
                                        }
                                    },
                                    "rest": {
                                        "type": "number",
                                        "title": "Number of Rest Classes"
                                    }
                                }
                            }
                        }
                    }
                ]
            }
        }
    },
    "4": {
        "title": "",
        "type": "object",
        "required": [
            "start",
            "end",
            "days",
            "duration"
        ],
        "properties": {
            "start": {
                "type": "string",
                "format": "date",
                "title": "Start Date"
            },
            "end": {
                "type": "string",
                "format": "date",
                "title": "End Date"
            },
            "duration": {
                "type": "number",
                "title": "Duration of Class"
            },
            "startTime": {
                "type": "string",
                "format": "time",
                "title": "Start Time"
            },
            "endTime": {
                "type": "string",
                "format": "time",
                "title": "End Time"
            },
            "days": {
                "type": "array",
                "title": "Select the days",
                "items": {
                    "type": "string",
                    "enum": [
                        "Sunday",
                        "Monday",
                        "Tuesday",
                        "Wednesday",
                        "Thursday",
                        "Friday",
                        "Saturday"
                    ]
                },
                "uniqueItems": true
            },
            "group-schedule": {
                "type": "number",
                "title": "Consumer can choose start time before",
                "description": "This will give you lead time to prepare yourself for the class. This type of booking is generally on the same day."
            }
        }
    },
    "5": {
        "title": "",
        "type": "object",
        "properties": {
            "voucher": {
                "type": "string",
                "title": "Additional Voucher"
            },
            "plan": {
                "type": "string",
                "title": "Workout Plan",
                "enum": [
                    "Monthly",
                    "Quaterly",
                    "Half Yearly",
                    "Yearly"
                ]
            },
            "price": {
                "type": "number",
                "title": "Set Pricing"
            }
        }
    }
}