{
    "1": {
        "title": "",
        "type": "object",
        "required": [
            "packagename",
            "disciplines",
            "equipmentList",
            "level",
            "intensity"
        ],
        "properties": {
            "packagename": {
                "type": "string",
                "title": "Name of Offering",
                "description": "Enter the Title for Offering"
            },
            "disciplines": {
                "type": "string",
                "title": "Disciplines",
                "description": "Choose the relevant discipline for the offering"
            },
            "equipmentList": {
                "type": "string",
                "description": "Add all equipments required for the offering"
            },
            "tags": {
                "type": "string",
                "title": "Tags",
                "description": "Use hashtags to improve your listing"
            },
            "level": {
                "type": "number",
                "title": "Level",
                "enum": [0, 1, 2, 3],
                "enumNames": [
                    "Beginner",
                    "Intermediate",
                    "Advanced",
                    "No level"
                ],
                "description": "Select the relevant level for the offering"
            },
            "intensity": {
                "type": "number",
                "title": "Intensity",
                "enum": [0, 1, 2],
                "enumNames": [
                    "Low",
                    "Moderate",
                    "High"
                ],
                "description": "Set the relevant intensity for the level"
            }
        }
    },
    "2": {
        "title": "",
        "type": "object",
        "required": [
            "About",
            "Benifits",
            "thumbnail",
            "Upload",
            "languages"
        ],
        "properties": {
            "About": {
                "type": "string",
                "title": "About"
            },
            "Benifits": {
                "type": "string",
                "title": "Benefits"
            },
            "languages": {
                "type": "string"
            },
            "thumbnail": {
                "type": "string",
                "description": "Accepts only Image and size cannot exceed 5mb"
            },
            "Upload": {
                "type": "object",
                "oneOf": [
                    {
                        "title": "Video URL", 
                          "properties": {
                            "VideoUrl": {
                              "type": "string",
                              "format": "uri",
                              "description": "Add Youtube URL"
                            }
                          },
                          "required": [
                            "VideoUrl"
                          ]
                        },
                    {
                        "title": "Upload picture or video", 
                        "properties": {
                            "upload": {
                                "type": "string",
                                "description": "Accepts only Image and size cannot exceed 5mb"
                            }
                      },
                      "required": [
                        "upload"
                      ]
                    }
                ]

            }
        }
    },
    "3": {
        "title": "Program Details",
        "type": "object",
        "required": ["programDetails"],
        "properties": {
            "programDetails": {
                "type": "string"
            }
        }
    },
    "4": {
        "title": "For Programs",
        "type": "object",
        "required": ["bookingleadday"],
        "properties": {
            "bookingleadday": {
                "type": "number",
                "description": "The lead time will allow you to discuss, understand, request data and then build a custom program.",
                "title": "Consumer can choose start date, after",
                "enum": [0, 1, 2, 3, 4, 5],
                "enumNames": [
                    "1 day",
                    "2 days",
                    "3 days",
                    "4 days",
                    "5 days",
                    "6 days"
                ]
            }
        }
    },
    "5": {
        "title": "Pricing Plan",
        "type": "object",
        "required":["pricingDetail"],
        "properties": {
            "pricingDetail": {
                "type": "string",
                "title": "Pricing Plan",
                "value": ""
            }
        }
    },
    "6": {
        "title": "Package Settings",
       "type": "object",
       "required": [
        "visibility",
        "datesConfig",
        "config"
       ],
       "properties": {
            "visibility": {
                "type": "number",
                "title": "Visibility",
                "enum": [0, 1],
                "enumNames": [
                    "Public",
                    "Private"
                ],
                "description": "Public: The Offering will be visible to the user as soon as it is created, Private: The offering will be save as draft and wait for you to publish it."
            },
            "datesConfig": {
                "type": "string"
            },
            "config": {
                "title": "Booking Config",
                "type": "object",
                "required": [
                    "bookingConfig"
                ],
                "properties": {
                    "bookingConfig": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "7": {
        "title": "Preview",
        "type": "object",
        "properties": {
            "carousel": {
                "type": "string",
                "title": "carousel"
            },
            "link": {
                "type": "null",
                "title": "carousel"
            }
        }
    }
}