{
    "1": {
        "title": "",
        "type": "object",
        "required": [
            "packageName",
            "level",
            "intensity",
            "dates"
        ],
       "properties": {
            "packageName": {
                "type": "string",
                "title": "Packge Name"
            },
            "tag": {
                "type": "string",
                "title": "Tags"
            },
            "discpline": {
                "type": "string"
            },
            "equipment": {
                "type": "string"
            },
           "level": {
                "type": "number",
                "title": "Level",
                "enum": [0, 1, 2, 3],
                "enumNames": [
                    "Beginner",
                    "Intermediate",
                    "Advanced", 
                    "No level"
                ]
            },
            "intensity": {
                "type": "number",
                "title": "Intensity",
                "enum": [0, 1, 2],
                "enumNames": [
                    "Low",
                    "Moderate",
                    "High"
                ]
            },
            "dates": {
                "type": "string"
            }
            
        }   
    },
    "2": {
       "title": "",
       "type": "object",
       "required": [
        "About",
        "Benifits",
        "languages",
        "classSize",
        "thumbnail",
        "Upload"
       ],
       "properties": {
            "About": {
                "type": "string",
                "title": "About"
            },
            "Benifits": {
                "type": "string",
                "title": "Benefits"
            },
            "languages": {
                "type": "string",
                "title": "Languages"
            },
            "classSize": {
                "type": "number",
                "title": "Class Size",
                "minimum": 100,
                "maximum": 200
            },
            "thumbnail": {
                "type": "string"
            },
            "Upload": {
                "type": "object",
                "oneOf": [
                    {
                        "title": "Upload picture or video", 
                        "properties": {
                            "upload": {
                                "type": "string"
                            }
                      },
                      "required": [
                        "upload"
                      ]
                    },
                    {
                    "title": "Video URL", 
                      "properties": {
                        "VideoUrl": {
                          "type": "string",
                          "format": "uri"
                        }
                      },
                      "required": [
                        "VideoUrl"
                      ]
                    }
                ]

            }
        }
    },
    "3": {
        "title": "",
       "type": "object",
       "required": [
            "programDetails",
            "courseDetails"
       ],
       "properties": {
           "programDetails": {
                "type": "string"
           },
           "courseDetails": {
                "title": "Course Details",
                "type": "object",
                "required": [
                    "details"
                ],
                "properties": {
                    "details": {
                        "type": "string"
                    }
                }
        }
        }
    },
    "4": {
        "title": "",
       "type": "object",
       "required": [
        "pricing"
       ],
       "properties": {
            "pricing": {
                "type": "string"
            }
        }
    },
    "5": {
        "title": "Package Settings",
       "type": "object",
       "required": [
        "visibility",
        "datesConfig",
        "config"
       ],
       "properties": {
            "visibility": {
                "type": "number",
                "title": "Visibility",
                "enum": [0, 1],
                "enumNames": [
                    "Public",
                    "Private"
                ]
            },
            "datesConfig": {
                "type": "string"
            },
            "config": {
                "title": "Booking Config",
                "type": "object",
                "required": [
                    "acceptBooking",
                    "maxBookingMonth",
                    "maxBookingDay"
                ],
                "properties": {
                    "acceptBooking": {
                        "type": "number",
                        "title": "",
                        "enum": [0, 1],
                        "enumNames": [
                            "Manual",
                            "Auto"
                        ]
                    },
                    "maxBookingMonth": {
                        "type": "number",
                        "title": "Maximum booking/per month",
                        "minimum": 2,
                        "maximum": 50
                    },
                    "maxBookingDay": {
                        "type": "number",
                        "title": "Maximum booking/per day",
                        "minimum": 2,
                        "maximum": 10
                    }
                }
            }
        }
    },
    "6": {
        "title": "",
       "type": "object",
       "required": [
       ],
       "properties": {
            "preview": {
                "type": "string"
            }
        }
    }
}