{
    "1": {
        "title": "",
        "type": "object",
        "required": ["packagename", "equipmentList"],
        "properties": {
            "packagename": {
                "type": "string",
                "title": "Name of Offering",
                "description": "Enter the Title for Offering"
            },
            "equipmentList": {
                "type": "string",
                "description": "Add all equipments required for the offering"
            },
            "tags": {
                "type": "string",
                "title": "Hash tags",
                "description": "Use hashtags to improve your listing"
            }
        }
    },
    "2": {
        "title": "",
        "type": "object",
        "required": ["About", "Benifits", "thumbnail", "VideoUrl", "languages"],
        "properties": {
            "About": {
                "type": "string",
                "title": "About"
            },
            "Benifits": {
                "type": "string",
                "title": "Benefits"
            },
            "languages": {
                "type": "string",
                "title": "Languages"
            },
            "thumbnail": {
                "type": "string",
                "description": "This image will be seen in the listing screen"
            },
            "VideoUrl": {
                "type": "string",
                "format": "youtubeurl",
                "description": "Add Youtube URL"
            }
        }
    },
    "3": {
        "title": "Program Details",
        "type": "object",
        "required": ["programDetails"],
        "properties": {
            "programDetails": {
                "type": "string"
            }
        }
    },
    "4": {
        "title": "Pricing Plan",
        "type": "object",
        "required": ["pricingDetail"],
        "properties": {
            "pricingDetail": {
                "type": "string",
                "title": "Pricing Plan",
                "value": ""
            }
        }
    },
    "5": {
        "title": "Package Settings",
        "type": "object",
        "required": ["visibility", "datesConfig"],
        "properties": {
            "visibility": {
                "type": "number",
                "title": "Visibility",
                "enum": [0, 1],
                "default": 0,
                "enumNames": ["Public", "Private"],
                "description": "Public: The Offering will be visible to the user as soon as it is created, Private: The offering will not ve seen by anyone until you share it with them"
            },
            "datesConfig": {
                "type": "string"
            }
        }
    }
}
