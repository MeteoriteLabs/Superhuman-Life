{
     "1": {
         "title": "",
         "type": "object",
         "required": [
            "packagename",
            "disciplines",
            "equipmentList",
            "level",
            "intensity"
         ],
         "properties": {
             "packagename": {
                 "type": "string",
                 "title": "Name of Offering",
                 "description": "Enter the title for offerring"
             },
             "disciplines": {
                 "type": "string",
                 "title": "Disciplines",
                 "description": "Choose the relevant discipline for the offering"
             },
             "equipmentList": {
                 "type": "string",
                 "description": "Add all tools required"
             },
             "tags": {
                 "type": "string",
                 "title": "Tags",
                 "description": "Use hashtags to improve your listing"
             },
             "level": {
                "type": "number",
                "title": "Level",
                "enum": [0, 1, 2, 3],
                "enumNames": [
                    "Beginner",
                    "Intermediate",
                    "Advanced", 
                    "No level"
                ],
                 "description": "Select the appropriate difficulty" 
             },
             "intensity": {
                 "type": "number",
                 "title": "Intensity",
                 "enum": [0, 1, 2],
                 "enumNames": [
                     "Low",
                     "Moderate",
                     "High"
                 ],
                 "description": "Set the pace of the offering"
             }
         }
     },
     "2": {
         "title": "",
         "type": "object",
         "required": [
            "About",
            "Benifits",
            "classSize",
            "languages",
            "thumbnail",
            "Upload"
         ],
         "properties": {
             "About": {
                 "type": "string",
                 "title": "About",
                 "description": "Summarize the offering"
             },
             "Benifits": {
                 "type": "string",
                 "title": "Benefits",
                 "description": "List the advantages"
             },
             "classSize": {
                "type": "number",
                "title": "PT Class Size",
                "enum": [0, 1, 2],
                "enumNames": [
                    "Solo",
                    "Couple",
                    "Family"
                ],
                "description": "Solo - Single user, Couple - Two users, Family - Usually 3 - 4 users"
            },
            "languages": {
                "type": "string",
                "title": "Languages"
            },
             "thumbnail": {
                 "type": "string",
                 "description": "This image will be seen in the listing screen"
             },
             "Upload": {
                 "type": "object",
                 "title": "Offering Screen Image/Video",
                 "oneOf": [
                    {
                        "title": "Add Youtube URL", 
                          "properties": {
                            "VideoUrl": {
                              "type": "string",
                              "format": "uri",
                              "description": "Add Youtube URL"
                            }
                          },
                          "required": [
                            "VideoUrl"
                          ]
                        },
                     {
                         "title": "Upload picture or video", 
                         "properties": {
                             "upload": {
                                 "type": "string",
                                 "description": "This image will be seen in the details screen of the offering"
                             }
                       },
                       "required": [
                         "upload"
                       ]
                     }
                     
                 ]
 
             }
         }
     },
     "3": {
         "title": "Program Details",
         "type": "object",
         "required": ["programDetails"],
         "properties": {
             "programDetails": {
                 "type": "string"
             }
         }
     },
     "4": {
         "title": "Pricing Plan",
         "type": "object",
         "required": ["pricingDetail"],
         "properties": {
             "pricingDetail": {
                 "type": "string"
             }
         }
 
     },
     "5": {
         "title": "Package Settings",
        "type": "object",
        "required": [
         "visibility",
         "datesConfig",
         "config"
        ],
        "properties": {
             "visibility": {
                 "type": "number",
                 "title": "Visibility",
                 "enum": [0, 1],
                 "enumNames": [
                     "Public",
                     "Private"
                 ],
                 "description": "Public: The Offering will be visible to the user as soon as it is created, Private: The offering will not ve seen by anyone until you share it with them"
             },
             "datesConfig": {
                 "type": "string"
             },
             "config": {
                "title": "Booking Config",
                "type": "object",
                "required": [
                    "bookingConfig"
                ],
                "properties": {
                    "bookingConfig": {
                        "type": "string"
                    }
                }
             }
         }
     },
     "6": {
         "title": "Preview",
         "type": "object",
         "properties": {
             "carousel": {
                 "type": "string",
                 "title": "carousel"
             }
         }
     }
 }