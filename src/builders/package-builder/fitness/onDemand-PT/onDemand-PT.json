{
    "1": {
        "title": "",
        "type": "object",
        "required": ["packagename", "disciplines", "equipmentList", "intensity"],
        "properties": {
            "packagename": {
                "type": "string",
                "title": "Name of Offering",
                "description": "Enter the title for offerring"
            },
            "disciplines": {
                "type": "string",
                "title": "Disciplines",
                "description": "Choose the relevant discipline for the offering"
            },
            "equipmentList": {
                "type": "string",
                "description": "Add all tools required"
            },
            "tags": {
                "type": "string",
                "title": "Hash tag",
                "description": "Use hashtags to improve your listing"
            },
            "level": {
                "type": "number",
                "title": "Level",
                "enum": [0, 1, 2],
                "enumNames": ["Beginner", "Intermediate", "Advanced"],
                "default": 0,
                "description": "Select the appropriate difficulty"
            },
            "intensity": {
                "type": "number",
                "title": "Intensity",
                "enum": [0, 1, 2],
                "enumNames": ["Low", "Moderate", "High"],
                "default": 0,
                "description": "Set the pace of the offering"
            }
        }
    },
    "2": {
        "title": "",
        "type": "object",
        "required": ["About", "Benifits", "classSize", "languages", "thumbnail", "VideoUrl"],
        "properties": {
            "About": {
                "type": "string",
                "title": "About",
                "description": "Summarize the offering"
            },
            "Benifits": {
                "type": "string",
                "title": "Benefits",
                "description": "List the advantages"
            },
            "classSize": {
                "type": "number",
                "title": "PT Class Size",
                "enum": [0, 1, 2],
                "enumNames": ["Solo", "Couple", "Family"],
                "default": 0,
                "description": "Solo - Single user, Couple - Two users, Family - Usually 3 - 4 users"
            },
            "languages": {
                "type": "string",
                "title": "Languages"
            },
            "thumbnail": {
                "type": "string",
                "description": "This image will be seen in the listing screen"
            },
            "VideoUrl": {
                "type": "string",
                "format": "youtubeurl",
                "description": "Add Youtube URL"
            }
        }
    },
    "3": {
        "title": "Program Details",
        "type": "object",
        "required": ["programDetails"],
        "properties": {
            "programDetails": {
                "type": "string"
            }
        }
    },
    "4": {
        "title": "Pricing Plan",
        "type": "object",
        "required": ["pricingDetail"],
        "properties": {
            "pricingDetail": {
                "type": "string"
            }
        }
    },
    "5": {
        "title": "Package Settings",
        "type": "object",
        "required": ["visibility"],
        "properties": {
            "visibility": {
                "type": "number",
                "title": "Visibility",
                "enum": [0, 1],
                "enumNames": ["Public", "Private"],
                "default": 0,
                "description": "Public: The Offering will be visible to the user as soon as it is created, Private: The offering will not ve seen by anyone until you share it with them"
            },
            "datesConfig": {
                "type": "string"
            },
            "config": {
                "title": "Booking Config",
                "type": "number",
                "enum": [0, 1],
                "enumNames": ["Manual", "Auto"],
                "default": 0
            }
        }
    }
}
