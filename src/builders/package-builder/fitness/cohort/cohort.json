{
    "1": {
        "title": "",
        "type": "object",
        "required": [
            "packageName",
            "discpline",
            "equipment",
            "level",
            "intensity",
            "dates"
        ],
       "properties": {
            "packageName": {
                "type": "string",
                "title": "Name of Offering",
                "description": "Enter the Title for Offering"
            },
            "discpline": {
                "type": "string",
                "description": "Choose the relevant discipline for the offering"
            },
            "equipment": {
                "type": "string",
                "description": "Add all equipments required for the offering"
            },
            "tag": {
                "type": "string",
                "title": "Tags",
                "description": "Use hashtags to improve your listing"
            },
           "level": {
                "type": "number",
                "title": "Level",
                "enum": [0, 1, 2, 3],
                "enumNames": [
                    "Beginner",
                    "Intermediate",
                    "Advanced", 
                    "No level"
                ],
                "description": "Select the relevant level for the offering"
            },
            "intensity": {
                "type": "number",
                "title": "Intensity",
                "enum": [0, 1, 2],
                "enumNames": [
                    "Low",
                    "Moderate",
                    "High"
                ],
                "description": "Set the relevant intensity for the level"
            },
            "dates": {
                "type": "string"
            }
            
        }   
    },
    "2": {
       "title": "",
       "type": "object",
       "required": [
        "About",
        "Benifits",
        "languages",
        "classSize",
        "thumbnail",
        "Upload"
       ],
       "properties": {
            "About": {
                "type": "string",
                "title": "About"
            },
            "Benifits": {
                "type": "string",
                "title": "Benefits"
            },
            "languages": {
                "type": "string",
                "title": "Languages"
            },
            "classSize": {
                "type": "number",
                "title": "Class Size",
                "minimum": 100,
                "maximum": 200
            },
            "thumbnail": {
                "type": "string",
                "description": "Accepts only Image and size cannot exceed 5mb"
            },
            "Upload": {
                "type": "object",
                "oneOf": [
                    {
                        "title": "Video URL", 
                          "properties": {
                            "VideoUrl": {
                              "type": "string",
                              "format": "uri",
                              "description": "Add Youtube URL"
                            }
                          },
                          "required": [
                            "VideoUrl"
                          ]
                        },
                    {
                        "title": "Upload picture or video", 
                        "properties": {
                            "upload": {
                                "type": "string",
                                "description": "Accepts only Image and size cannot exceed 5mb"
                            }
                      },
                      "required": [
                        "upload"
                      ]
                    }
                ]

            }
        }
    },
    "3": {
        "title": "",
       "type": "object",
       "required": [
            "programDetails",
            "courseDetails"
       ],
       "properties": {
           "programDetails": {
                "type": "string"
           },
           "courseDetails": {
                "title": "Course Details",
                "type": "object",
                "required": [
                    "details"
                ],
                "properties": {
                    "details": {
                        "type": "string"
                    }
                }
        }
        }
    },
    "4": {
        "title": "",
       "type": "object",
       "required": [
        "pricing"
       ],
       "properties": {
            "pricing": {
                "type": "string"
            }
        }
    },
    "5": {
        "title": "Package Settings",
       "type": "object",
       "required": [
        "visibility",
        "datesConfig",
        "config"
       ],
       "properties": {
            "visibility": {
                "type": "number",
                "title": "Visibility",
                "enum": [0, 1],
                "enumNames": [
                    "Public",
                    "Private"
                ],
                "description": "Public: The Offering will be visible to the user as soon as it is created, Private: The offering will be save as draft and wait for you to publish it."
            },
            "datesConfig": {
                "type": "string"
            },
            "config": {
                "title": "Booking Config",
                "type": "object",
                "required": [
                    "bookingConfig"
                ],
                "properties": {
                    "bookingConfig": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "6": {
        "title": "",
       "type": "object",
       "required": [
       ],
       "properties": {
            "preview": {
                "type": "string"
            }
        }
    }
}