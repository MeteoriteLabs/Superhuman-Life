{
    "1": {
        "title": "",
        "type": "object",
        "required": ["packagename", "equipmentList"],
        "properties": {
            "packagename": {
                "type": "string",
                "title": "Name of Offering",
                "description": "Enter the Title for Offering"
            }, 
            "equipmentList": {
                "type": "string",
                "description": "Add all tools required"
            },
            "tags": {
                "type": "string",
                "title": "Hash tags",
                "description": "Use hashtags to improve your listing"
            },
            "durationOfOffering": {
                "type": "array",
                "title": "Choose the relevant payment durations",
                "items": {
                    "type": "string",
                    "enum": ["30 days", "90 days", "180 days", "360 days"]
                },
                "uniqueItems": true,
                "default": ["30 days", "90 days", "180 days", "360 days"]
            }
        }
    },
    "2": {
        "title": "",
        "type": "object",
        "required": ["About", "Benifits", "languages", "classSize", "thumbnail", "VideoUrl"],
        "properties": {
            "About": {
                "type": "string",
                "title": "About",
                "description": "Summarize the offering"
            },
            "Benifits": {
                "type": "string",
                "title": "Benefits",
                "description": "List the advantages"
            },
            "languages": {
                "type": "string",
                "title": "Languages"
            },
            "classSize": {
                "type": "number",
                "title": "PT Class Size",
                "enum": [0, 1, 2],
                "enumNames": ["Solo", "Couple", "Family"],
                "default": 0,
                "description": "Solo - Single user, Couple - Two users, Family - Usually 3 - 4 users"
            },
            "thumbnail": {
                "type": "string",
                "description": "This image will be seen in the listing screen"
            },
            "VideoUrl": {
                "type": "string",
                "format": "youtubeurl",
                "description": "Add Youtube URL",
                "title": "Youtube URL"
            }
        }
    },
    "3": {
        "title": "Program Details",
        "type": "object",
        "required": ["programDetails"],
        "properties": {
            "programDetails": {
                "type": "string"
            }
        }
    },
    "4": {
        "title": "For Programs",
        "type": "object",
        "required": ["bookingleadday"],
        "properties": {
            "bookingleadday": {
                "type": "number",
                "description": "The lead time will allow you to discuss, understand, request data and then build a custom program.",
                "title": "User can choose start date, after",
                "enum": [0, 1, 2, 3, 4, 5],
                "enumNames": ["1 day", "2 days", "3 days", "4 days", "5 days", "6 days"],
                "default": 0
            }
        }
    },
    "5": {
        "title": "Pricing Plan",
        "type": "object",
        "required": ["pricingDetail"],
        "properties": {
            "pricingDetail": {
                "type": "string"
            }
        }
    },
    "6": {
        "title": "Offering Settings",
        "type": "object",
        "required": ["visibility"],
        "properties": {
            "visibility": {
                "type": "number",
                "title": "Visibility",
                "enum": [0, 1],
                "enumNames": ["Public", "Private"],
                "default": 0,
                "description": "Public: The offering can be viewed by anyone to purchase, Private: The offering will not ve seen by anyone until you share it with them"
            },
            "datesConfig": {
                "type": "string"
            },
            "config": {
                "title": "Booking Config",
                "type": "number",
                "enum": [0, 1],
                "enumNames": ["Manual", "Auto"],
                "default": 0
            }
        }
    }
}
