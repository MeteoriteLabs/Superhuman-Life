{
    "1": {
        "title": "",
        "type": "object",
        "required": [
            "name",
            "cuisine",
            "mode",
            "status"
        ],
        "properties": {
            "name": {
                "type": "string",
                "title": "Name of Package"
            },
            "cuisine": {
                "type": "string",
                "title": "Cuisine",
                "enum": [
                    "Chinese",
                    "Italian",
                    "Mexican",
                    "Thai"
                ]
            },
            "tags": {
                "type": "string",
                "title": "Tags"
            },
            "mode": {
                "type": "string",
                "title": "Mode",
                "description": "Meal Plans can be given only through mobile application",
                "enum": [
                    "Online",
                    "Offline",
                    "Hybrid"
                ]
            },
            "status": {
                "type": "string",
                "title": "Status",
                "enum": [
                    "Active",
                    "Inactive",
                    "Pending"
                ]
            }
        }
    },
    "2": {
        "title": "",
        "type": "object",
        "required": [
            "about",
            "benefits"
        ],
        "properties": {
            "about": {
                "type": "string",
                "title": "About"
            },
            "benefits": {
                "type": "string",
                "title": "Benefits"
            },
            "video": {
                "type": "string",
                "format": "uri",
                "title": "Recipe Video Link"
            },
            "thumbnail": {
                "type": "string",
                "format": "data-url",
                "title": "Recipe Picture",
                "accept": ".jpg"
            }
        }
    },
    "3": {
        "title": "",
        "description": "Program has to be assigned to Classic package",
        "type": "object",
        "required": [
            "package"
        ],
        "properties": {
            "package": {
                "type": "string",
                "title": "Assign Package Now",
                "description": "Package won't be active till the program is assigned.",
                "enum": [
                    "Yes",
                    "Later"
                ]
            },
            "program": {
                "title": "",
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "title": {
                            "type": "string",
                            "title": "Title"
                        }
                    }
                }
            }
        }
    },
    "4": {
        "title": "For Classic Meal Package",
        "type": "object",
        "properties": {
            "classic-meal-schedule": {
                "type": "number",
                "title": "Consumer can choose start date after",
                "description": "This lead time will help you discuss, understand, request data and then build a custom program for the client."
            }
        }
    },
    "5": {
        "title": "",
        "type": "object",
        "properties": {
            "voucher": {
                "type": "string",
                "title": "Additional Voucher"
            },
            "plan": {
                "type": "string",
                "title": "Nutrition Plan",
                "enum": [
                    "Monthly",
                    "Quaterly",
                    "Half Yearly",
                    "Yearly"
                ]
            },
            "price": {
                "type": "number",
                "title": "Set Pricing"
            }
        }
    }
}