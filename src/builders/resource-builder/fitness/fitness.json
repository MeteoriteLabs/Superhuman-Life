{
    "title": "Add Exercise",
    "description": " ",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "title": "Name of Exercise"
        },
        "type": {
            "type": "string",
            "title": "Type of Exercise"
        },
        "level": {
            "type": "string",
            "title": "Level",
            "enum": [
                "Beginner",
                "Basic",
                "Difficult",
                "Expert",
                "Challenge"
            ]
        },
        "tags": {
            "type": "string",
            "title": "Tags"
        },
        "about": {
            "type": "string",
            "format": "textarea",
            "title": "About"
        },
        "muscles": {
            "type": "array",
            "title": "Muscles Involved",
            "items": {
                "type": "string",
                "enum": [
                    "Muscle-One",
                    "Muscle-Two",
                    "Muscle-Three",
                    "Muscle-Four"
                ]
            },
            "uniqueItems": true
        },
        "equipment": {
            "type": "string",
            "title": "List of Equipments",
            "enum": [
                "Equipment1",
                "Equipment2",
                "Equipment3",
                "Equipment4",
                "Equipment5"
            ]
        },
        "video": {
            "type": "string",
            "format": "uri",
            "title": "Exercise Video Link"
        },
        "thumbnail": {
            "type": "string",
            "format": "data-url",
            "title": "Exercise Picture",
            "accept": ".jpg"
        }
    }
}