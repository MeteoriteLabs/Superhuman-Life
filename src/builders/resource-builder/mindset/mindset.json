{
    "title": "Add Podcast Episode",
    "description": " ",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "title": "Name of Episode"
        },
        "category": {
            "type": "string",
            "title": "Category",
            "enum": [
                "Fitness",
                "Mindset",
                "Nutrition",
                "Other"
            ]
        },
        "about": {
            "type": "string",
            "format": "textarea",
            "title": "About Podcast"
        },
        "tags": {
            "type": "string",
            "title": "Tags"
        },
        "video": {
            "type": "string",
            "format": "uri",
            "title": "Intro Video Link"
        },
        "thumbnail": {
            "type": "string",
            "format": "data-url",
            "title": "Thumbnail Picture",
            "accept": ".jpg"
        }
    }
}