{
    "1": {
        "type": "object",
        "properties": {
            "PayeeFirstName": {
                "type": "string",
                "title": "First Name"
            },
            "PayeeLastName": {
                "type": "string",
                "title": "Last Name"
            },
            "Email": {
                "type": "string",
                "title": "Email"
            },
            "Phone_Number": {
                "type": "string",
                "title": "Contact Number"
            },
            "type": {
                "title": "Type of contact",
                "type": "string",
                "enum": ["Client", "Organization", "Community", "Service Provider", "Vendor"],
                "default": "Client"
            },
            "TypeofPayee": {
                "type": "boolean",
                "title": "Do you own Business?",
                "default": false
            }
        },
        "allOf": [
            {
                "if": {
                    "properties": {
                        "TypeofPayee": {
                            "const": true
                        }
                    }
                },
                "then": {
                    "properties": {
                        "organisationName": {
                            "type": "string",
                            "title": "Organisation Name"
                        },
                        "GSTNumber": {
                            "type": "string",
                            "title": "GST Number"
                        },
                        "organisationEmail": {
                            "type": "string",
                            "title": "Organisation Email",
                            "format": "email"
                        },
                        "address1": {
                            "type": "string",
                            "title": "Address 1"
                        },
                        "address2": {
                            "type": "string",
                            "title": "Address 2"
                        },
                        "city": {
                            "type": "string",
                            "title": "City"
                        },
                        "state": {
                            "type": "string",
                            "title": "State"
                        },
                        "country": {
                            "type": "string",
                            "title": "Country"
                        },
                        "zipcode": {
                            "type": "string",
                            "title": "Zipcode",
                            "max-length": 6
                        }
                    },
                    "required": ["organisationName", "GSTNumber", "organisationEmail"]
                }
            }
        ]
    },
    "2": {
        "title": "",
        "type": "object",
        "required": ["PaymentCategory"],
        "properties": {
            "PaymentCategory": {
                "title": "Payment Category",
                "enum": [
                    "Vendor",
                    "Rental",
                    "Supplies",
                    "Marketing and Ads",
                    "Maintenance",
                    "Reimbursement",
                    "Consulting Services",
                    "Miscellaneous"
                ],
                "default": "Vendor"
            },
            "FrequencyOfPayment": {
                "title": "Frequency of Payment",
                "type": "number",
                "enum": [0, 1],
                "enumNames": ["One Time", "Monthly"],
                "default": 0
            }
        },
        "allOf": [
            {
                "if": {
                    "properties": {
                        "FrequencyOfPayment": {
                            "const": 0
                        }
                    }
                },
                "then": {
                    "properties": {
                        "amountToBePaid": {
                            "type": "string",
                            "title": "Amount to be paid"
                        },
                        "paymentDueOn": {
                            "type": "string",
                            "title": "Payment due on",
                            "format": "date-time"
                        },
                        "setReminder": {
                            "type": "string",
                            "title": "Set Reminder",
                            "format": "date-time"
                        }
                    },
                    "required": ["amountToBePaid", "paymentDueOn", "setReminder"]
                }
            },
            {
                "if": {
                    "properties": {
                        "FrequencyOfPayment": {
                            "const": 1
                        }
                    }
                },
                "then": {
                    "properties": {
                        "amountToBePaid": {
                            "type": "string",
                            "title": "Amount to be paid"
                        },
                        "effectiveDate": {
                            "type": "string",
                            "title": "Effective Date",
                            "format": "date"
                        },
                        "paymentCycle": {
                            "type": "number",
                            "title": "Payment Cycle",
                            "enum": [1, 2, 3, 4, 5],
                            "enumNames": [
                                "1st of every month",
                                "2nd of every month",
                                "3rd of every month",
                                "4th of every month",
                                "5th of every month"
                            ],
                            "default": 1
                        },
                        "payFromNextPaymentCycle": {
                            "type": "boolean",
                            "title": "Pay from next payment cycle",
                            "enum": [true, false],
                            "default": false
                        },
                        "setReminder": {
                            "type": "string",
                            "title": "Set Reminder",
                            "format": "date-time"
                        },
                        "provideBreakdown": {
                            "type": "string",
                            "title": "Provide Breakdown",
                            "enum": ["Yes", "No"]
                        }
                    },
                    "allOf": [
                        {
                            "if": {
                                "properties": {
                                    "payFromNextPaymentCycle": {
                                        "const": true
                                    }
                                }
                            },
                            "then": {
                                "properties": {
                                    "firstPayment": {
                                        "type": "string",
                                        "title": "First Payment"
                                    }
                                },
                                "required": ["firstPayment"]
                            }
                        },
                        {
                            "if": {
                                "properties": {
                                    "provideBreakdown": {
                                        "const": "Yes"
                                    }
                                }
                            },
                            "then": {
                                "properties": {
                                    "basicPay": {
                                        "type": "string",
                                        "title": "Basic Pay"
                                    },
                                    "HRA": {
                                        "type": "string",
                                        "title": "HRA or HRR"
                                    },
                                    "Gratuity": {
                                        "type": "string",
                                        "title": "Gratuity"
                                    },
                                    "LTA": {
                                        "type": "string",
                                        "title": "LTA"
                                    },
                                    "ESI": {
                                        "type": "string",
                                        "title": "ESI"
                                    },
                                    "MedicalReimbursement": {
                                        "type": "string",
                                        "title": "Medical Reimbursement"
                                    },
                                    "ChildCare": {
                                        "type": "string",
                                        "title": "Child Care"
                                    },
                                    "SpecialAllowance": {
                                        "type": "string",
                                        "title": "Special Allowance"
                                    },
                                    "ProfessionalTax": {
                                        "type": "string",
                                        "title": "Professional Tax"
                                    },
                                    "TDS": {
                                        "type": "string",
                                        "title": "TDS"
                                    },
                                    "ProvidentFund": {
                                        "type": "string",
                                        "title": "Provident Fund"
                                    }
                                }
                            }
                        },
                        {
                            "required": ["provideBreakdown", "payFromNextPaymentCycle"]
                        }
                    ],
                    "required": ["amountToBePaid", "effectiveDate"]
                }
            },
            {
                "required": ["FrequencyOfPayment"]
            }
        ]
    },
    "3": {
        "type": "object",
        "title": "Mode of payment",
        "properties": {
            "upi": {
                "type": "boolean",
                "title": " UPI",
                "enum": [true, false],
                "default": true
            },
            "bankAccount": {
                "type": "boolean",
                "title": " Bank Account",
                "enum": [true, false],
                "default": false
            }
        },
        "allOf": [
            {
                "if": {
                    "properties": {
                        "upi": {
                            "title": "UPI Details",
                            "const": true
                        }
                    }
                },
                "then": {
                    "properties": {
                        "UPI_ID": {
                            "type": "string",
                            "title": "UPI ID"
                        },
                        "upiPhoneNumber": {
                            "type": "string",
                            "title": "Phone",
                            "minLength": 10,
                            "format": "phone-in"
                        }
                    },
                    "required": ["UPI_ID", "upiPhoneNumber"]
                }
            },
            {
                "if": {
                    "properties": {
                        "bankAccount": {
                            "title": "Bank Account Details",
                            "const": true
                        }
                    }
                },
                "then": {
                    "properties": {
                        "AccountNumber": {
                            "type": "number",
                            "title": "Account Number",
                            "max-length": 17,
                            "minLength": 9
                        },
                        "ifscCode": {
                            "type": "string",
                            "title": "IFSC Code"
                        },
                        "BankName": {
                            "type": "string",
                            "title": "Name of the Bank"
                        },
                        "Branch": {
                            "type": "string",
                            "title": "Branch"
                        },
                        "accountType": {
                            "type": "string",
                            "title": "Account Type",
                            "enum": ["Current", "Savings"],
                            "default": "Current"
                        }
                    },
                    "required": ["AccountNumber", "ifscCode", "BankName", "Branch", "accountType"]
                }
            }
        ]
    }
}
