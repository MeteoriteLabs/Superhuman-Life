{
    "title": "Add Event",
    "description": "Basic Details",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "title": "Name of Event"
        },
        "category": {
            "type": "string",
            "title": "Level",
            "enum": [
                "Exercise",
                "Fitness",
                "Meditation",
                "Nutrition"
            ]
        },
        "type": {
            "type": "string",
            "title": "Type of Event"
        },
        "level": {
            "type": "string",
            "title": "Level",
            "enum": [
                "Beginner",
                "Basic",
                "Difficult",
                "Expert",
                "Challenge"
            ]
        },
        "tags": {
            "type": "string",
            "title": "Tags"
        },
        "mode": {
            "type": "string",
            "title": "Mode",
            "enum": [
                "Offline",
                "Online"
            ]
        },
        "location": {
            "type": "string",
            "title": "Location"
        },
        "days": {
            "type": "number",
            "title": "Number of Days"
        },
        "duration": {
            "type": "number",
            "title": "Duration of Each Day"
        },
        "visible": {
            "type": "string",
            "title": "Visibility",
            "enum": [
                "Private",
                "Public"
            ]
        },
        "about": {
            "type": "string",
            "format": "textarea",
            "title": "About"
        },
        "video": {
            "type": "string",
            "format": "uri",
            "title": "Exercise Video Link"
        },
        "thumbnail": {
            "type": "string",
            "format": "data-url",
            "title": "Exercise Picture",
            "accept": ".jpg"
        }
    }
}